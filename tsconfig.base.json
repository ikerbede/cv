{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "types": ["@angular/localize"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cv/education": ["libs/education/src/index.ts"],
      "@cv/experiences": ["libs/experiences/src/index.ts"],
      "@cv/languages": ["libs/languages/src/index.ts"],
      "@cv/navigation": ["libs/navigation/src/index.ts"],
      "@cv/profile": ["libs/profile/src/index.ts"],
      "@cv/publications": ["libs/publications/src/index.ts"],
      "@cv/shared-assets": ["libs/shared/assets/src/*"],
      "@cv/shared-utils": ["libs/shared/utils/src/index.ts"],
      "@cv/techs": ["libs/techs/src/index.ts"],
      "@cv/toolbar": ["libs/toolbar/src/index.ts"],
      "mobile/Routes": ["apps/mobile/src/app/remote-entry/entry.routes.ts"],
      "monitor/Routes": ["apps/monitor/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}

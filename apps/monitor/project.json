{
  "name": "monitor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/monitor/src",
  "tags": ["type:app"],
  "implicitDependencies": ["shared-assets"],
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "en": "apps/monitor/src/locale/messages.en.json",
      "es": "apps/monitor/src/locale/messages.es.json",
      "fr": "apps/monitor/src/locale/messages.fr.json",
      "eu": "apps/monitor/src/locale/messages.eu.json"
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/monitor",
        "index": "apps/monitor/src/index.html",
        "main": "apps/monitor/src/main.ts",
        "polyfills": ["@angular/localize/init"],
        "localize": true,
        "i18nMissingTranslation": "warning",
        "tsConfig": "apps/monitor/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/monitor/public"
          },
          {
            "glob": "**/*",
            "input": "libs/shared/assets/src/lib",
            "output": "assets"
          }
        ],
        "styles": [
          "@cv/shared-styles/cv-theme.scss",
          "@cv/shared-styles/global.scss",
          "apps/monitor/src/styles.scss"
        ],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/monitor/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/monitor/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "en": {
          "localize": ["en"]
        },
        "es": {
          "localize": ["es"]
        },
        "fr": {
          "localize": ["fr"]
        },
        "eu": {
          "localize": ["eu"]
        }
      },
      "defaultConfiguration": "production,en"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4202,
        "publicHost": "http://localhost:4202"
      },
      "configurations": {
        "production": {
          "buildTarget": "monitor:build:production"
        },
        "development": {
          "buildTarget": "monitor:build:development"
        }
      },
      "defaultConfiguration": "development",
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "monitor:build",
        "outputPath": "apps/monitor/src/locale",
        "format": "json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/monitor/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "monitor:build",
        "port": 4202,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "monitor:build:development"
        },
        "production": {
          "buildTarget": "monitor:build:production"
        }
      }
    }
  }
}
